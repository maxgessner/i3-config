# #---i3-input---# #

# call i3-input empty
bindsym $mod+i exec i3-input

# set one character mark for focused window
bindsym $mod+n exec i3-input -F 'mark %s' -l 1 -P 'Mark: '

# unset one character mark
bindsym $mod+shift+n exec i3-input -F 'unmark %s' -l 1 -P 'Unmark: '

# goto marked window
bindsym $mod+g exec i3-input -F '[con_mark="%s"] focus' -l 1 -P 'Goto: '

# #---Spotify controls---# #

# play/pause
bindsym $alt+x exec "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause" 

# next
bindsym $alt+v exec "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next" 

# previous
bindsym $alt+y exec "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous"

# stop
bindsym $alt+c exec "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Stop"


# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
	id 0

	colors {
		    background #00000000
	}

	# position
	position bottom

	# set tray output to primary display
	tray_output primary
	
	# set font for bar
	font pango: FontAwesome 5 Free 8
	
	# make bar transparent
	i3bar_command i3bar --transparency

	# bumblebee status command
	status_command bumblebee-status -m title nic spotify memory weather caffeine brightness battery pasource pasink shortcut indicator datetime -p title.max=32 nic.states="^down" spotify.format="{playbackStatus} {artist} - {title}" spotify.left-click="i3-msg '[class='Spotify'] scratchpad show'" spotify.pause=RIGHT_CLICK memory.label="" memory.left-click='x-terminal-emulator -T "TerminalHtop" -e htop' memory.format="{used}/{total}" weather.right-click="xfce4-terminal -H -T 'Weather' -e 'curl wttr.in'" battery.left-click="xfce4-power-manager -c" shortcut.cmds="xfce4-appfinder;xfce4-settings-manager;x-terminal-emulator -T "gui-settings" -e ./own_programs/gui-settings;x-terminal-emulator -e i3lock -d -c 000000 -n;$HOME/bin/logout.py &>/dev/null" shortcut.labels="🔍;;;;⏻" datetime.format="%a %d.%m.%y  %H:%M" datetime.left-click="orage" indicator.include='capslock,scrollock' interval=1 engine.workspacewheel=false -a indicator -t iceberg #iceberg
}

